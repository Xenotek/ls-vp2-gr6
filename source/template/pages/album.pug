extends ../template
include ../common/_mixins
block content
    include ../common/_add-photos-modal.pug
    include ../common/_edit-photo-modal.pug
    include ../common/_slider-album-modal.pug
    header.header__album
        .wrapper
            .header__user-info
                .user-photo
                    +avatar
                .user-info
                    h4.user-info__name Антон Черепов
            .header-content
                h3.my-album-title Лесные прогулки
                .my-album-desc Фотографии природы леса, енотов и оленей. Как прекрасно сойти на дальней станции и пройтись по полю босиком. И чтобы никто не беспокоил бродить влюбленным в тишину. Запах мёда, лесных оленей и енотов будоражит нутро.
            .header__buttons
                .header__buttons-item
                    a.btn.button_animated.button__home(href="/main.html")
                        i(class="fa fa-home")
                        span На главную
                .header__buttons-item
                    a.btn.button_animated.button_edit-info
                        i(class="fa fa-pencil")
                        span Редактировать
        .gray-bg
            ul.album-general-info
                li
                    span.photo-count 6
                    | Фотографий
                li
                    span.like-count 54
                    | Лайков
                li
                    span.comments-count 45
                    | Комментариев

    .changes.changes__album
        form(action="/" method="POST" enctype="multipart/form-data").changes__form
        .changes__top
            .changes__container.changes__container__center
                .user
                    .user_image
                        +avatar
                    .user-info__name="Антон Черепов"
                .changes__data
                    input(type="text" name="username" value="Милые котики").input
                    textarea(name="userdescription").textarea="Фотографии котов, кошечек и котят. Выкладывайте своих любимцев!"
                .changes__background
                    i(aria-hidden="true").fa.fa-camera
                    span="Изменить фон"
                    input(type="file" name="avatar").changes__file__background
        .changes__bottom
            .changes__container
                button.button.close__header__edit="Отменить"
                input(type="submit" name="saveheader" value="Сохранить").input__submit
    section.my-album
        .my-album_content
            .my-album__holder
                a(href="#").btn.button_animated.button_add
                    svg.svg-add-album
                        use(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/img/sprite.svg#add")
                    span.add-album-btn-text Добавить
            ul.my-album-container
                +singlePhoto("Путешествие на лодке по озеру", "Милые котики", "42", "34", "http://lorempixel.com/300/300/cats/1", "default_avatar.jpg")
                +singlePhoto("Путешествие", "Милые котики", "7", "9", "http://lorempixel.com/300/300/cats/3", "default_avatar.jpg")
                +singlePhoto("Путешествие на лодке по озеру", "Милые котики", "15", "13", "http://lorempixel.com/300/300/cats/4", "default_avatar.jpg")
                +singlePhoto("Путешествие", "Милые котики", "12", "22", "http://lorempixel.com/300/300/cats/5", "default_avatar.jpg")
                +singlePhoto("Путешествие на лодке по озеру", "Милые котики", "5", "9", "http://lorempixel.com/300/300/cats/6", "default_avatar.jpg")
                +singlePhoto("Путешествие", "Милые котики", "10", "1", "http://lorempixel.com/300/300/cats/9", "default_avatar.jpg")
    include ../common/_footer

block variables
    - var title = 'Альбом'

